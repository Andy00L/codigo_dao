    },
    { "code": 6001, "name": "WeightTooHigh", "msg": "Weight value too high" },
    {
      "code": 6002,
      "name": "MetadataTooLong",
      "msg": "Metadata string too long"
    },
    {
      "code": 6003,
      "name": "CooldownActive",
